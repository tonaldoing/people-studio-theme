{
  "name": "people-studio-theme",
  "version": "1.0.0",
  "description": "A custom WordPress theme for People Studio using Tailwind CSS and Gutenberg.",
  "main": "index.js",
  "scripts": {
    "build": "postcss assets/css/tailwind.css -o assets/css/main.css --watch",
    "build:prod": "NODE_ENV=production postcss assets/css/tailwind.css -o assets/css/main.css",
    "start": "wp-scripts start",
    "build:gutenberg": "wp-scripts build"
  },
  "keywords": [
    "wordpress",
    "theme",
    "tailwindcss",
    "people-studio",
    "gutenberg"
  ],
  "author": "Tom√°s Vilas",
  "license": "ISC",
  "devDependencies": {
    "@wordpress/scripts": "^23.0.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.13"
  }
}
